#include <stdio.h>
#include <string.h>

int main(void)
{
    char buff[15];
    int pass = 0;

    printf("\nEnter the password:\n");
    gets(buff);

    if (strcmp(buff, "thegeekstuff"))
    {
        printf("\nWrong Password!\n");
    }
    {
        fprintf(stderr, "Input error\n");
        pass = 1;
    }
    if (pass)
    {
        printf("\nAccess Granted!\n");
    }
    return 0;
}

5../overflow
6. gcc -g -O0 -fno-stack-protector –no-pie overflow.c –o overflow
